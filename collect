#!/bin/bash
# Distributed collection script using Celery workers

cd "$(dirname "$0")"

# Activate conda environment
source ~/miniconda3/etc/profile.d/conda.sh 2>/dev/null || source ~/anaconda3/etc/profile.d/conda.sh 2>/dev/null
conda activate ssr

# Use distributed collector
export PYTHONUNBUFFERED=1
python3 -u distributed/distributed_collector.py "$@"
